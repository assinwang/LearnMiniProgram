<!--pages/image/image.wxml-->
<!-- 1.image的基本使用 -->
<!-- 重点：
  1.image组件可以写成但标签，也可以写成双标签
  2.image组件有自己默认的大小：320x240，跟屏幕尺寸无关
  3.image组件是一个行内块级元素
-->
<!-- <image></image> -->

<!-- 2.src: 本地路径/远程地址 -->
<image src='/assets/images/1.jpg'></image>
<image src='https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg'></image>

<!-- 补充：相册中的图片 -->
<button bindtap="handleChooseAlbum">选择图片</button>
<image src="{{imagePath}}"></image>

<!-- 3.bindload:监听图片加载完成 -->
<!-- lazy-load:图片懒加载 -->
<image wx:for="{{1}}"
  src='https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg'
  bindload='handleImageLoad'
  lazy-load="{{true}}">
</image>

<!-- 4.show-menu-by-longpress: 长按图片出现识别小程序码-->
<image show-menu-by-longpress
  src="/assets/images/1.jpg">
</image>




